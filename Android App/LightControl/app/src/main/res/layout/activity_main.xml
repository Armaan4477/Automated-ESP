<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/timeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: --:--:--"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESP8266 Control"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>

        <ToggleButton
            android:id="@+id/relay1Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Relay 1 ON"
            android:textOff="Relay 1 OFF"
            android:layout_marginBottom="10dp"/>

        <ToggleButton
            android:id="@+id/relay2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Relay 2 ON"
            android:textOff="Relay 2 OFF"
            android:layout_marginBottom="10dp"/>

        <ToggleButton
            android:id="@+id/relay3Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Relay 3 ON"
            android:textOff="Relay 3 OFF"
            android:layout_marginBottom="10dp"/>

        <ToggleButton
            android:id="@+id/relay4Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Relay 4 ON"
            android:textOff="Relay 4 OFF"
            android:layout_marginBottom="20dp"/>

        <!-- Schedule Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#f0f0f0"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Schedule"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/relaySelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/onTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="On Time (HH:MM)"
                android:inputType="time"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/offTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Off Time (HH:MM)"
                android:inputType="time"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/addScheduleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Schedule"/>
        </LinearLayout>

        <!-- Schedule Table -->
        <TableLayout
            android:id="@+id/scheduleTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#e0e0e0"
            android:padding="16dp">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Relay"
                    android:padding="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On Time"
                    android:padding="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Off Time"
                    android:padding="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:padding="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Action"
                    android:padding="5dp"
                    android:textStyle="bold"/>
            </TableRow>

            <!-- Schedule rows will be added here dynamically -->
        </TableLayout>

    </LinearLayout>
</ScrollView>